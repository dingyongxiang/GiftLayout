<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp">

    <RelativeLayout
        android:id="@+id/rlparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/m_gift_text_root"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_top_black"
            android:paddingEnd="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/m_gift_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="超人不会飞"
                android:maxLength="8"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星中偶像"
                android:layout_marginStart="25dp"
                android:textColor="#FFCC00"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/m_gift_icon"
            android:src="@mipmap/gift_9_big"
            android:layout_alignEnd="@+id/m_gift_text_root"
            android:layout_alignBottom="@+id/m_gift_text_root"
            android:layout_marginEnd="15dp"
            android:layout_width="50dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <com.yueya.app.ui.view.MagicTextView
        android:id="@+id/giftNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/rlparent"
        android:layout_alignBottom="@+id/rlparent"
        android:includeFontPadding="false"
        android:text="x1"
        android:textColor="#FFD85B"
        android:textSize="25sp"
        android:textStyle="bold"
        app:strokeJoinStyle="miter"
        app:strokecolor="@android:color/white"
        android:layout_marginEnd="20dp"
        app:strokewidth="2" />

</RelativeLayout>